{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start IoT Stack (Local Dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "powershell",
      "runtimeArgs": [
        "-NoExit",
        "-Command",
        "Write-Host 'IoT stack (Local) running; close task terminals to stop.'"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "start-iot-stack-local"
    },
    {
      "name": "Start IoT Stack (Docker)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "powershell",
      "runtimeArgs": [
        "-NoExit",
        "-Command",
        "Write-Host 'IoT stack (Docker) running; use docker compose down to stop.'"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "start-iot-stack-docker"
    },
    {
      "name": "Stop IoT Stack (Docker)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "powershell",
      "runtimeArgs": [
        "-Command",
        "Write-Host 'IoT stack (Docker) stopped.'"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "stop-iot-stack-docker"
    }
  ]
}
