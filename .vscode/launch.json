{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start IoT Stack",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "powershell",
      "runtimeArgs": [
        "-NoExit",
        "-Command",
        "Write-Host 'IoT stack tasks running; close task terminals to stop.'"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "start-iot-stack"
    }
  ]
}
